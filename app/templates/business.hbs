<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form role="form">
      <div class="form-group">
        <label for="id-name">Business name</label>
        {{input type="text" id="id-name" name="name" value=name placeholder="E.g., Bob's Burgers" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="id-location">Location</label>
        {{input type="text" id="id-location" name="location" value=location placeholder="E.g., 37.4025091,-122.1057978" class="form-control"}}
      </div>
      <button {{action 'save'}} class="btn btn-default">Create Business</button>
    </form>
    {{#if succeeded}}
      <div data-alert class="alert-box success radius">
        Successfully saved Business Model.
        <a {{action 'reset'}} class="close">&times;</a>
      </div>
    {{/if}}
    {{#if lastSavedModel}}
      <div>id: {{lastSavedModel.id}}</div>
      <div>Name: {{lastSavedModel.name}}</div>
      <div>Created At: {{lastSavedModel.createdAt}}</div>
    {{/if}}
  </div>
</div>
